#include <iostream>
using namespace std;
int main() {
    int n,x;
    cout << "Ingrese n numeros: ";
    cin >> n;

    float a = 0;
    for (int i = 0; i < n; i++) {
        float x;
        cout <<"ingrese numero:"<< i + 1 << ": ";
        cin >>x;
        a+=x;
    }

    float promedio = a / n;
    cout << "El promedio es: " << promedio << endl;

    return 0;
}
